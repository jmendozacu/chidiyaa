<?xml version="1.0" encoding="UTF-8"?>

<config>
	<tabs>
		<vs_extensions>
			<label>VS Extensions</label>
			<sort_order>195</sort_order>
		</vs_extensions>
	</tabs>
    <sections>
        <ajaxscroll translate="label" >
            <label>Infinite Ajax Scroll</label>
            <tab>vs_extensions</tab>
            <frontend_type>text</frontend_type>
            <sort_order>90</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
				<about translate="label">	
					<label>Developer</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>					
						<fields>
							<info translate="label">
								<frontend_model>ajaxscroll/about</frontend_model>
								<sort_order>1</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
							</info>																
						</fields>
					</about>
                <general translate="label">
                    <label>Setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled jQuery</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
						 <useajaxscroll translate="label">
                            <label>Use jQuery Infinite Ajax Scroll</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </useajaxscroll>										
                    </fields>
                </general>								
									
            </groups>
			
        </ajaxscroll>
    </sections>
</config>
