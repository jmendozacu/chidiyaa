/**
 * @var $this Mage_Sales_Block_Order_Totals
 * @see Mage_Sales_Block_Order_Totals
 */
?>
<?php foreach ($this->getTotals() as $_code => $_total): ?>
    <?php if ($_total->getBlockName()): ?>
        <?php echo $this->getChildHtml($_total->getBlockName(), false); ?>
    <?php else:?>
    <tr class="<?php echo $_code?>">
        <td <?php echo $this->getLabelProperties()?>>
        <?php if($_total->getLabel()!="Subtotal"): ?>
            <?php if ($_total->getStrong()):?>
            <strong><?php echo $this->escapeHtml($_total->getLabel());?></strong>
            <?php else:?>
            <?php echo $this->escapeHtml($_total->getLabel());?>
            <?php endif?>
         <?php else: ?>
         <?php if ($_total->getStrong()):?>
            <strong><?php echo $this->escapeHtml($_total->getLabel());?></strong>
            <?php else:?>
            <?php echo "Product Price"; ?>
            <?php endif?>
         <?php endif; ?>
        </td>
        <td <?php echo $this->getValueProperties()?>>
        <?php if($_total->getLabel()!="Subtotal"): ?>
            <?php if ($_total->getStrong()):?>
            <strong><?php echo $this->formatValue($_total) ?></strong>
            <?php else:?>
            <?php echo $this->formatValue($_total) ?>
            <?php endif?>
        <?php else: ?>
        <?php 
        $currency_code = Mage::app()->getStore()->getCurrentCurrencyCode(); // store currency symbol eg. $ 
        $currency_symbol = Mage::app()->getLocale()->currency( $currency_code )->getSymbol(); 
        $total_tax= $_total->getValue() - $_total->getValue()*(5.25/100);
        ?>
        <?php if ($_total->getStrong()):?>
            <strong><?php echo $currency_symbol.$total_tax; ?></strong>
            <?php else:?>
            <?php echo $currency_symbol.$total_tax; ?>
            <?php endif?>
            <?php endif; ?>
        </td>
    </tr>
    <?php if($_total->getLabel()=="Subtotal"): ?>
    <td <?php echo $this->getLabelProperties()?>>
            <?php if ($_total->getStrong()):?>
            <strong>Tax Included</strong>
            <?php else:?>
            Tax Included
            <?php endif?>
        </td>
        <?php
        $currency_code = Mage::app()->getStore()->getCurrentCurrencyCode(); // store currency symbol eg. $ 
        $currency_symbol = Mage::app()->getLocale()->currency( $currency_code )->getSymbol(); 
        ?>
        <td <?php echo $this->getValueProperties()?>>
            <?php if ($_total->getStrong()):?>
            <strong><?php  echo $currency_symbol.$_total->getValue()*(5.25/100); ?></strong>
            <?php else:?>
            <?php //echo $_total->getValue(); ?>
            <?php
            echo $currency_symbol.$_total->getValue()*(5.25/100);
            ?>
            <?php endif?>
        </td>
    <?php endif; ?>
    <?php endif?>
<?php endforeach?>
